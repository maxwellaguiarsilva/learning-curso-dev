{
  "name": "learning-curso-dev",
  "version": "1.0.0",
  "description": "Para finalidade de estudo",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:down && npm run services:up && npm run wait-database-service && npm run migration:up && next dev",
    "services:up": "docker compose --file infra/compose.yaml up --detach",
    "services:stop": "docker compose --file infra/compose.yaml stop",
    "services:down": "docker compose --file infra/compose.yaml down",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest --runInBand",
    "test:watch": "jest --runInBand --watchAll",
    "migration:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "wait-database-service": "node infra/scripts/wait-database-service.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "http-status-codes": "^2.3.0",
    "next": "^15.0.3",
    "node-pg-migrate": "^7.8.0",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "prettier": "^3.3.3"
  }
}
